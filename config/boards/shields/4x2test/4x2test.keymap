#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        // 2 rows Ã— 4 cols:
        // Top:  1  2  3  4
        // Bottom: 5  6  7  [BT hold]
        default_layer {
            bindings = <
                &kp N1  &kp N2  &kp N3  &kp N4
                &kp N5  &kp N6  &kp N7  &mo 1
            >;
        };

        // Bluetooth layer (hold the BT key to use these)
        bt_layer {
            bindings = <
                &none        &none        &bootloader   &bt BT_CLR
                &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2  &trans
            >;
        };
    };
};
