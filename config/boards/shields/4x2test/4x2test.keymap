#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        // Default: 1..8 (hold the last key to open BT layer)
        default_layer {
            bindings = <
                &kp N1        &kp N2        &kp N3        &kp N4
                &kp N5        &kp N6        &kp N7        &lt bt_layer N8
            >;
        };

        // Bluetooth / maintenance layer (like Joeâ€™s)
        bt_layer {
            bindings = <
                &none         &none         &bootloader    &bt BT_CLR
                &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2   &trans
            >;
        };
    };
};
